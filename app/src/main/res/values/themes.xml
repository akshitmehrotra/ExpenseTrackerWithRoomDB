<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ExpenseTrackerWithRoomDB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#00FF00</item> <!-- Green primary color -->
        <item name="colorPrimaryDark">#00FF00</item>
        <item name="colorAccent">#00FF00</item>
        <item name="android:windowBackground">#000000</item> <!-- Black background for activities -->
    </style>

    <!-- Custom dialog theme -->
    <style name="CustomDialogTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">#333333</item> <!-- Dark grey background -->
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
    </style>

    <!-- Custom dialog button style -->
    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/white</item> <!-- White background for buttons -->
        <item name="android:textColor">#00FF00</item> <!-- Green text color for buttons -->
    </style>

    <style name="Theme.ExpenseTrackerWithRoomDB" parent="Base.Theme.ExpenseTrackerWithRoomDB" />
</resources>